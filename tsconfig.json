{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2022",
		"lib": [
			"ES2022"
		],
		"esModuleInterop": true,
		"isolatedModules": true,
		"moduleDetection": "force",
		"rootDir": "src",
		"outDir": "dist",
		"strict": true,
		"skipLibCheck": true,
		"resolveJsonModule": true,
		"incremental": true,
		"sourceMap": true
	},
	"exclude": [
		"node_modules",
		".vscode-test",
		"src/ui/src",
		"src/ui/build",
		"taze.config.ts",
		"tsdown.config.ts",
		"rolldown.config.js",
		"knip.ts"
	],
}